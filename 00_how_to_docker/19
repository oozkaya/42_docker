docker run --name Abathur -v ~/exo19docker:/root -p 3000:3000 -dit python:2-slim
docker exec Abathur pip install flask

echo -e 'from flask import Flask\napp = Flask(__name__)\n@app.route("/")\ndef hello():\n\treturn "<h1>Hello World</h1>"\nif __name__ == "__main__":\n\tapp.run(host="0.0.0.0", port=3000)' > ~/exo19docker/main.py && chmod 777 ~/exo19docker/main.py
